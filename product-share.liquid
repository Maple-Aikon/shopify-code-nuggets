{% comment %}
insert this on your product page using {% include 'share' %} wherever you want it to show
{% endcomment %}

{% comment %}
<!-- uncomment this block if you don't already have font awesome on your site -->
<script src="https://use.fontawesome.com/4ab1e5b37c.js"></script>
{% endcomment %}

<div class="share clearfix">
	<div class="left">SHARE THIS {{ product.type | upcase }}
  	</div>
	<div class="right mt-xs-10">
		<span><a href="mailto:your@friend.com?subject=Check%20out%20this%20great%20{{ product.type }}&amp;body={{ product.title | strip_html }}%0ASeen%20at%20{{ shop.url }}{{ product.url }}"><i class="fa fa-envelope"></i></a></span>
		<span><a target="_blank" href="https://www.facebook.com/sharer/sharer.php?u={{ shop.url }}{{ product.url }}"><i class="fa fa-facebook"></i></a></span>
		<span><a target="_blank" href="https://twitter.com/share"><i class="fa fa-twitter"></i></a></span>
		<span><a target="_blank" href="https://plus.google.com/share?url={{ shop.url }}{{ product.url }}"><i class="fa fa-google-plus-square"></i></a></span>
		<span><a target="_blank" href="https://www.linkedin.com/shareArticle?mini=true&url={{ shop.url }}{{ product.url }}&title={{ product.title }}"><i class="fa fa-linkedin"></i></a></span>
		<span><a target="_blank" href="http://pinterest.com/pin/create/button/?url={{ shop.url }}{{ product.url }}&description={{ product.vendor | strip_html }} - {{ product.title | strip_html }} from {{ shop.url }}&media={{product.featured_image.src | product_img_url: 'grande'}}"><i class="fa fa-pinterest"></i></a></span>
	</div>
</div>


<style type="text/css">
.share {
    height: 60px;
    padding: 20px;
    background-color: #F7F7F6;
    margin-top: 30px;
}
.share i {
    font-size:20px;
  margin-right:5px;
  color:black;
}
</style>