#colorbox{outline:0;}

    #cboxContent{background:#fff; overflow:visible;}
        .cboxIframe{background:#fff;}
        #cboxError{padding:50px; border:1px solid #ccc;}
        #cboxLoadedContent{margin-bottom:5px;}
        #cboxLoadingOverlay{background:url({{ 'loading_background.png' | asset_url }}) no-repeat center center;}
        #cboxLoadingGraphic{background:url({{ 'loading.gif' | asset_url }}) no-repeat center center;}
